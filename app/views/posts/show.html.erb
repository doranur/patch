<div class="post_content">
<p>
    <!-- <strong>Link:</strong> -->
    <%= link_to image_tag(@post.link, class: 'postImage'), @post.link, :target => "_blank"  %>
</p>

<h1><%= @post.title %></h1>
<%= @post.description %>

<p>    <strong>User:</strong>
    <%= @post.user.name %>
    <% if user_signed_in? && current_user.id == @post.user.id %>
    <%= link_to '(Edit', edit_post_path(@post) %>
    -
    <%= link_to 'Delete)', post_path(@post),
                  method: :delete,
                  data: { confirm: 'Are you sure you want to delete this post?' } %>
    <% else %>
    <% end %>
</p>


<p>
    <%= @post.get_upvotes.size %> <%= link_to "Like", like_post_path(@post), method: :get %>
    -
    <%= @post.get_downvotes.size %> <%= link_to "Dislike", dislike_post_path(@post), method: :get %>
</p>

</div>
<div class="horizontal"></div>
<h2>
    <%= comment_count = pluralize(@post.comments.count, "Comment") %>:
</h2>
<% @comments.each do |comment| %>
<p><%= username = comment.user.name %>:
<%= content = comment.content %>
<% if user_signed_in? && current_user.id == comment.user.id %>
<%= link_to '(Delete)', [comment.post, comment],
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this comment?' } %></p>
<% else %>
<% end %>
<% end %>
</p>

<p></p>
<%= render 'comments/form' %>
