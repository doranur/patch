<div id="post_show">
  <h1>
    <%= @post.title %>
  </h1>
  <p class="username">
    Shared by
    <%= @post.user.name %>
    about
    <%= time_ago_in_words(@post.created_at) %>
    ago
  </p>
  <div class="clearfix">
    <div class="post_image_description">
        <%= image_tag(@post.link, class: 'postImage')  %>
        </div>
      <div class="description">
        <%= @post.description %>
      </div>

    <div class="post_data">
      <%= link_to "Visit Link", @post.link, target: "_blank", class: "button" %>
      <%= link_to like_post_path(@post), method: :get, class: "data" do %>
        <span class="fa fa-thumbs-o-up"></span>
        <%= pluralize(@post.get_upvotes.size, "Like") %>
      <% end %>
      <p class="data">
        <i class="fa fa-comments-o"></i>
        <%= pluralize(@post.comments.count, "Comment") %>
      </p>
      <% if @post.user == current_user %>
        <%= link_to "Edit", edit_post_path(@post), class: "data" %>
        <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "data" %>
      <% end %>

    </div>
  </div>
</div>

<div class="horizontal"></div>
<h2>
    <%= comment_count = pluralize(@post.comments.count, "Comment") %>:
</h2>
<% @comments.each do |comment| %>
<p><%= username = comment.user.name %>:
<%= content = comment.content %>
<% if user_signed_in? && current_user.id == comment.user.id %>
<%= link_to '(Delete)', [comment.post, comment],
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this comment?' } %></p>
<% else %>
<% end %>
<% end %>
</p>

<%= link_to "Random Post", @random_post %>

<p></p>
<%= render 'comments/form' %>
